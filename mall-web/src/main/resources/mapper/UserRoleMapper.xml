<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mall.user.core.mapper.UserRoleMapper">
    <resultMap id="BaseResultMap" type="com.example.mall.user.api.entity.UserRole">
        <id column="id" property="id"/>
        <result column="role_id" property="roleId"/>
        <result column="user_id" property="userId"/>
        <result column="del_flag" property="delFlag"/>
        <result column="create_by" property="createBy"/>
        <result column="create_time" property="createTime"/>
        <result column="update_by" property="updateBy"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <!--  del_flag 1已删除,0未删除  -->

    <sql id="tb">`t_role_permission`</sql>

    <sql id="all_columns">
        id, role_id, user_id, del_flag, create_by, create_time, update_by, update_time
    </sql>

    <sql id="all_values">
        #{id}, #{roleId}, #{userId}, #{delFlag}, #{createBy}, #{createTime}, #{updateBy}, #{updateTime}
    </sql>

    <update id="deleteByUserId">
        UPDATE <include refid="tb"/>
        SET del_flag = 1
        WHERE user_id = #{value}
    </update>

    <select id="findByRoleId" resultMap="BaseResultMap">
        SELECT
            <include refid="all_columns"/>
        FROM
            <include refid="tb"/>
        WHERE role_id = #{value} AND del_flag = 0
    </select>

    <select id="findByUserId" resultType="com.example.mall.user.api.entity.Role">
      SELECT r.id id, name, r.data_type
      FROM t_user_role ur
      LEFT JOIN t_role r
      ON ur.role_id = r.id
      WHERE user_Id = #{userId}
    </select>
</mapper>